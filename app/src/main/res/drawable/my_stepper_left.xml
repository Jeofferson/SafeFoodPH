<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners
                android:topLeftRadius="5dp"
                android:bottomLeftRadius="5dp"/>
            <stroke
                android:width="2dp"
                android:color="@color/theme4"/>
            <gradient
                android:angle="360"
                android:startColor="@color/theme4Transparent"
                android:endColor="@color/theme4Transparent"/>
        </shape>
    </item>
    <item android:state_focused="true" >
        <shape android:shape="rectangle"  >
            <corners
                android:topLeftRadius="5dp"
                android:bottomLeftRadius="5dp"/>
            <stroke
                android:width="2dp"
                android:color="@color/theme4"/>
            <gradient
                android:angle="360"
                android:startColor="@color/theme4Transparent"
                android:endColor="@color/theme4Transparent"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners
                android:topLeftRadius="5dp"
                android:bottomLeftRadius="5dp"/>
            <stroke
                android:width="2dp"
                android:color="@color/theme4"/>
            <gradient
                android:angle="360"
                android:startColor="@color/white"
                android:endColor="@color/white"/>
        </shape>
    </item>
</selector>